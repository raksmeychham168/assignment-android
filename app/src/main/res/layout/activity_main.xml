<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- activity_main.xml -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/btnKhmerToUSD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khmer Riels to USD" />

        <Button
            android:id="@+id/btnUSDToKhmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USD to Khmer Riels" />

        <Button
            android:id="@+id/btnKhmerToEuro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khmer Riels to Euro" />

        <Button
            android:id="@+id/btnEuroToKhmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Euro to Khmer Riels" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>